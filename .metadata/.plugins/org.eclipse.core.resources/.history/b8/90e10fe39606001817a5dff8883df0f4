package daa38.Statistics;

import java.util.Collection;

import daa38.CSP.Auxiliary.Variable;

public class Analyser {

	public static int getNrVariables(Collection<Variable> pVars)
	{
		return pVars.size();
	}
	
	public static double getAverageDomainSize(Collection<Variable> pVars)
	{
		double lAvDS = 0;
		
		for (Variable lVar : pVars)
		{
			lAvDS += lVar.mDomain.size();
		}
		
		lAvDS = lAvDS / getNrVariables(pVars);
		
		return lAvDS;
	}
	
	public static double getAverageNrConstraints(Collection<Variable> pVars)
	{
		double lAvCon = 0;
		
		for (Variable lVar : pVars)
		{
			for (Constraint lCon : lVar.mConstraints)
				
		}
		
	}
}
